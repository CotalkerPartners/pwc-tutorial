{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "module":"CommonJS",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "typeRoots": ["node_modules/@types", "src/types", "src/types/COTTypes"],
    "outDir": "dist",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}