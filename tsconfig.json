{
    "compilerOptions": {
      "lib": ["ESNext"],
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "target": "ES2020",
      "typeRoots": ["node_modules/@types", "src/types", "src/types/COTTypes"],
      "outDir": "dist",
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.ts"],
    "exclude": [
      "node_modules/**/*",
      ".serverless/**/*",
      ".webpack/**/*",
      "_warmup/**/*",
      ".vscode/**/*"
    ]
  }
  